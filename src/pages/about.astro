---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getEntry } from "astro:content";
import PageLayout from "../layouts/PageLayout.astro";
import PageSection from "../components/global/PageSection.astro";
import AboutRyan from "../components/about/AboutHero.astro";
import LandingCTA from "../components/home/LandingCTA.astro";
let canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteConfig = await getEntry("config", "site");

const title = `About | ${siteConfig.data.name}`
---

<BaseLayout
  title={title}
  description="GGILabs is a web hosting and software development company based in Doylestown, PA"
  canonicalURL={canonicalURL}
>
  <PageLayout>
    <PageSection>
      <div class="flex flex-col text-xl text-primary justify-center text-center font-poppins my-5">
        <div>LEARN MORE ABOUT</div>
        <h1
          class=`flex mx-4 justify-center md:text-4xl text-2xl  font-bold font-quattro `
        >
          {siteConfig.data.name}
        </h1>
      </div>
      <AboutRyan />
    </PageSection>
    <LandingCTA />
  </PageLayout>
</BaseLayout>
